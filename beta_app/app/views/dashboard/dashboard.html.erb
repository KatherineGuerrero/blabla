<!-- top tiles -->
<div class="row tile_count">
  <div class="col-md-2 col-sm-4 col-xs-6 col-md-offset-2 tile_stats_count">
    <span class="count_top"><i class="fa fa-user"></i> Users</span>
    <div class="count"> <%= @users.length %> </div>
  </div>
  <div class="col-md-2 col-sm-4 col-xs-6 tile_stats_count">
      <%= link_to songs_path do %>
    <span class="count_top"><i class="fa fa-music"></i> Songs</span>
    <div class="count"><%= @songs.length %></div>
      <% end %>
  </div>
  <div class="col-md-2 col-sm-4 col-xs-6 tile_stats_count">
      <%= link_to albums_path do %>
    <span class="count_top"><i class="fa fa-headphones"></i> Albums</span>
    <div class="count"><%= @albums.length %></div>
      <% end %>
  </div>
  <div class="col-md-2 col-sm-4 col-xs-6 tile_stats_count">
      <%= link_to music_groups_path do %>
    <span class="count_top"><i class="fa fa-users"></i> Bands</span>
    <div class="count"><%= @bands.length %></div>
      <% end %>
  </div>

</div>
<!-- /top tiles -->

<div class="row">
  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="dashboard_graph">

      <div class="row x_title">
        <div class="col-md-10">
          <h3>Week report <small>This week's upload traffic</small></h3>
        </div>
        <div class="col-md-2">
            <div class="form-inline">
                <label for="dashboard_mode_button">Mode: </label>
                <select class="form-control btn btn-primary" name="dash_mode" id="dashboard_mode_button" onchange="changeData(this.value)">
                    <option value="song">Songs</option>
                    <option value="album">Albums</option>
                    <option value="band">Bands</option>
                    <option value="playlist">Playlists</option>
                </select>
            </div>

        </div>

      </div>

      <div class="col-md-10 col-sm-10 col-xs-12 col-md-offset-1">
        <div id="chart_plot_01" class="demo-placeholder"></div>
      </div>


      <div class="clearfix"></div>
    </div>
  </div>

</div>
<br />

<div class="row">


  <div class="col-md-4 col-sm-4 col-xs-12">
    <div class="x_panel tile fixed_height_320">
      <div class="x_title">
        <h2>Popular users</h2>
        <ul class="nav navbar-right panel_toolbox">
          <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
          </li>
          <li><a class="close-link"><i class="fa fa-close"></i></a>
          </li>
        </ul>
        <div class="clearfix"></div>
      </div>
      <div class="x_content">
        <h4>Measured on followers</h4>

        <% @popular_users.each do |user| %>
        <div class="widget_summary">
          <div class="w_left w_25">
            <span> <%= user.name %> </span>
          </div>
          <div class="w_center w_55">
            <div class="progress">
              <div class="progress-bar bg-green" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: <%= user.followers_by_all %>%;">
              </div>
            </div>
          </div>
          <div class="w_right w_20">
            <span> <%= user.followers.length %> </span>
          </div>
          <div class="clearfix"></div>
        </div>
        <% end %>

      </div>
    </div>
  </div>

  <div class="col-md-4 col-sm-4 col-xs-12">
    <div class="x_panel">
      <div class="x_title">
        <h2>Most recent<small id = "subtitle">Songs</small></h2>
        <ul class="nav navbar-right panel_toolbox">
          <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
          </li>
          <li><a class="close-link"><i class="fa fa-close"></i></a>
          </li>
        </ul>
        <div class="clearfix"></div>
      </div>
      <div class="x_content">
        <div class="dashboard-widget-content">

          <ul class="list-unstyled timeline widget">
            <% i = 0%>
            <% @songs_recent.each do |item| %>
            <li>
              <div class="block">
                <div class="block_content">
                  <h2 class="title" id="title_<%=i%>">
                    <%= item.name %>
                  </h2>
                  <div class="byline">
                    <span id = "item_class_<%=i%>"> <%= item.class.name %> </span> uploaded by <span id="byline_<%=i%>"> <%= item.user.name %> </span>
                  </div>
                </div>
              </div>
            </li>
            <% i += 1%>
            <% end %>


          </ul>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-4 col-sm-4 col-xs-12">
    <div class="x_panel tile fixed_height_320">
      <div class="x_title">
        <h2>Popular users</h2>
        <ul class="nav navbar-right panel_toolbox">
          <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
          </li>
          <li><a class="close-link"><i class="fa fa-close"></i></a>
          </li>
        </ul>
        <div class="clearfix"></div>
      </div>
      <div class="x_content">
        <h4>Measured on followers</h4>

        <% @popular_playlists.each do |playlist| %>
        <div class="widget_summary">
          <div class="w_left w_25">
            <span> <%= playlist.name %> </span>
          </div>
          <div class="w_center w_55">
            <div class="progress">
              <div class="progress-bar bg-green" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: <%= playlist.followers_by_all %>%;">
              </div>
            </div>
          </div>
          <div class="w_right w_20">
            <span> <%= playlist.followers.length %> </span>
          </div>
          <div class="clearfix"></div>
        </div>
        <% end %>

      </div>
    </div>
  </div>


</div>
