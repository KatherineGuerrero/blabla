<div class="row">
	<div class="col-sm-10 col-sm-offset-1 well">

		<h1>Editing Album</h1>

		<%= render 'form', album: @album %>

		<%= link_to 'Show', @album , class: "btn btn-primary"%> 
		<%= link_to 'Back', albums_path , class: "btn btn-primary"%> 
		<% if user_signed_in? %>
			<% if current_user.id == @album.user_id or current_user.role_id == 2%>
			  <%= link_to 'Destroy', @album, method: :delete, data: { confirm: 'Are you sure you want to delete this album?' } , class: "btn btn-primary"%>
			<% end  %>
		<% end %>

	</div>

</div>
