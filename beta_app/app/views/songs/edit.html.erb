
<div class="row">
    <div class="col-sm-10 col-sm-offset-1 well">

        <h1>Editing Song</h1>

        <%= render 'form', song: @song %>

        <%= link_to 'Show', @song, class: "btn btn-primary" %>
        <%= link_to 'Back', songs_path, class: "btn btn-primary" %>

        <% if user_signed_in? %>
        	<% if current_user.id == @song.user_id or current_user.role_id > @song.user.role_id %>
        	  <%= link_to 'Destroy', @album, method: :delete, data: { confirm: 'Are you sure you want to delete this song?' }, class: "btn btn-primary" %>
        	<% end  %>
        <% end %>

    </div>

</div>
